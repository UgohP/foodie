    <!-- MAIN -->
    <main>
        <div class="head-title">
            <div class="left">
                <h1>Dashboard</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="/dashboard">Dashboard</a>
                    </li>
                    <li><i class='bx bx-chevron-right' ></i></li>
                </ul>
            </div>
            <a href="/addNew" class="btn-download">
                <i class='bx' ></i>
                <span class="text">+ Add New &nearr;</span>
            </a>
        </div>

        <ul class="box-info">
            <li>
                <i class='bx bxs-calendar-check' ></i>
                <span class="text">
                    <h3><%= itemCount %></h3>
                    <p>Menus</p>
                </span>
            </li>
            <li>
                <i class='bx bxs-group' ></i>
                <span class="text">
                    <h3><%= reservationCount %></h3>
                    <p>Reservations</p>
                </span>
            </li>
            <!-- <li>
                <i class='bx bxs-dollar-circle' ></i>
                <span class="text">
                    <h3>$2543</h3>
                    <p>Total Sales</p>
                </span>
            </li> -->
        </ul>


        <div class="table-data">
            <div class="order">
                <div class="head">
                    <h3>Categories</h3>
                    <a href="/categoryAdmin">
                        <i class='bx' >View All &nearr;</i>
                    </a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(cat => { %>
                        <tr>
                                <td>
                                    <img src="<%= cat.image %>">
                                    <p><%= cat.name %></p>
                                </td>
                                <td>0</td>
                                <td>
                                    <a href="">
                                        <i class='bx' ><b>View &nearr;</b></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="">
                                        <i class='bx' ><b>Edit &nearr;</b></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="order">
                <div class="head">
                    <h3>Items</h3>
                    <a href="/itemsAdmin">
                        <i class='bx' >View All &nearr;</i>
                    </a>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(item => { %>
                         
                            <tr>
                                <td>
                                <img src="<%= item.image1 %>">
                                <p><%= item.name %></p>
                            </td>
                            <td>$<%= item.newPrice %></td>
                            <td><%= item.category.name %></td>
                            <td>
                                <a href="">
                                    <i class='bx' ><b>View &nearr;</b></i>
                                </a>
                            </td>
                            <td>
                                <a href="">
                                    <i class='bx' ><b>Edit &nearr;</b></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <!-- MAIN -->
    <!-- CONTENT -->