<main>
    <article>

      <!-- 
        - #HERO
        -->
        

        <section class="special-dish text-center" aria-labelledby="dish-label">
            
            <div class="special-dish-banner">
              <img src="<%= item.image1 %>" width="940" height="900" loading="lazy" alt="special dish"
              class="img-cover">
            </div>
            
            <div class="special-dish-content bg-black-10">
              <div class="container">
    
                <img src="/images/badge-1.png" width="28" height="41" loading="lazy" alt="badge" class="abs-img">

                <% if (item.seasonalItem) { %>
                    <p class="section-subtitle label-2">Seasonal Dish</p>
                <% } else if (item.newItem) { %>
                    <p class="section-subtitle label-2">New Dish</p>
                 <% } else if (item.isSpecial) { %>
                    <p class="section-subtitle label-2">Special Dish</p>
                <% } %>
    
                <h2 class="headline-1 section-title"><%= item.name %></h2>
                
                <p class="section-text">
                  <%= item.description %>
                </p>
    
                <div class="wrapper">
                  <del class="del body-3">$<%= item.oldPrice.toFixed(2)%></del>
    
                  <span class="span body-1">$<%= item.newPrice.toFixed(2) %></span>
                </div>
                
                <a href="/reservation" class="btn btn-primary">
                  <span class="text text-1">Book A Table</span>
    
                  <span class="text text-2" aria-hidden="true">Book A Table</span>
                </a>
    
              </div>
            </div>
    
            <img src="/images/shape-4.png" width="179" height="359" loading="lazy" alt="" class="shape shape-1">
            
            <img src="/images/shape-9.png" width="351" height="462" loading="lazy" alt="" class="shape shape-2">
            
            
          </section>
          <hr>
          <hr>
        </article>
        </main>